<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/tomato"
    android:fillViewport="true"
    tools:context=".MainGameActivity">

    <FrameLayout
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/scoretxt"
            android:text="Score :"
            android:layout_marginStart="2dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/scorevalue"
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="68dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="682dp"
            android:background="@color/white"
            android:layout_marginTop="108dp"
            android:elevation="10dp"
            android:hint="Value">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID1"
                android:layout_width="110dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="682dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:layout_marginTop="180dp"
            android:hint="Value">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID2"
                android:layout_width="110dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="682dp"
            android:background="@color/white"
            android:layout_marginTop="247dp"
            android:elevation="10dp"
            android:hint="Value">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID3"
                android:layout_width="110dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="682dp"
            android:background="@color/white"
            android:layout_marginTop="310dp"
            android:elevation="10dp"
            android:hint="Value">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID4"
                android:layout_width="110dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:id="@+id/imojimage"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:layout_width="200dp"
            android:src="@drawable/sadimoji"
            android:layout_height="140dp"
            android:elevation="40dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star2image"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:src="@drawable/star2img"
            android:elevation="30dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star3image"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:elevation="50dp"
            android:src="@drawable/gold3star"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/congratulationstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="240dp"
            android:textSize="40sp"
            android:elevation="50dp"
            android:text="Congratulations"
            android:textColor="#EFDC31"
            android:visibility="gone"/>
    </FrameLayout>
</RelativeLayout>

