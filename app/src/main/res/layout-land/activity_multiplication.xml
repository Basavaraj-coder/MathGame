<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/multiplicationop"
    tools:context=".multiplicationActivity">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/scoretxt"
            android:text="Score :"
            android:layout_marginStart="2dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="#FFE606"
            android:elevation="40dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/scorevalue"
            android:text="0"
            android:elevation="40dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="#FFE606"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/scoretxt"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="575dp"
            android:background="@color/white"
            android:layout_marginTop="22dp"
            android:hint="Value">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID1"
                android:layout_width="75dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="482dp"
            android:background="@color/white"
            android:layout_marginTop="152dp"
            android:hint="Value">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID2"
                android:layout_width="75dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginLeft="482dp"
            android:background="@color/white"
            android:layout_marginTop="290dp"
            android:hint="Value">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputID3"
                android:layout_width="75dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

