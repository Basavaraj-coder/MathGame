        <ImageView
            android:id="@+id/imojimage"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:layout_width="200dp"
            android:src="@drawable/sadimoji"
            android:layout_height="140dp"
            android:elevation="40dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star2image"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:elevation="40dp"
            android:src="@drawable/star2img"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star3image"
            android:layout_marginStart="280dp"
            android:layout_marginTop="120dp"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:elevation="40dp"
            android:src="@drawable/gold3star"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/congratulationstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="240dp"
            android:textSize="40sp"
            android:elevation="40dp"
            android:text="Congratulations"
            android:textColor="#EFDC31"
            android:visibility="gone"/>

    </RelativeLayout>

